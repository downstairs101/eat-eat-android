<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorError">@color/error</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:colorBackground">@color/primary</item>

        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="TextInputTheme.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="hintTextAppearance">@style/OutLineHintTextStyle</item>
    </style>

    <style name="OutLineHintTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
