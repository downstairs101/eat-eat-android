<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Shapes -->
    <style name="Shape.Rounded16" parent="AppTheme.DayNight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape.Rounded8" parent="AppTheme.DayNight">
        <item name="cornerFamily">rounded</item>¬
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Shape.Rounded8.Top" parent="AppTheme.DayNight">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerFamilyTopRight">rounded</item>¬
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>

    <!-- Colors -->
    <style name="Style.Background.Tint.Surface" parent="AppTheme.DayNight">
        <item name="backgroundTint">?colorSurface</item>
        <item name="backgroundColor">?colorSurface</item>
        <item name="cardBackgroundColor">?colorSurface</item>
    </style>

    <!--Application Bars -->
    <style name="Style.Bottom.Bar.Surface" parent="Style.Background.Tint.Surface" />

    <style name="Style.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface" />

    <!--Small components -->
    <style name="Style.Button.Secondary.Round" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <!--Medium components -->
    <style name="Style.CardView.Surface.Rounded" parent="Style.Background.Tint.Surface">
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Style.CardView.Surface.Rounded.Top" parent="Style.CardView.Surface.Rounded">
        <item name="shapeAppearanceOverlay">@style/Shape.Rounded8.Top</item>
    </style>

</resources>